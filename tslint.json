{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-etc"
  ],
  "jsRules": {},
  "rules": {
    "semicolon": {
      "options": ["never"],
      "severity": "error"
    },
    "indent": {
      "options":["spaces", 2],
      "severity": "error"
    },
    "quotemark": {
      "options": ["single", "avoid-escape"],
      "severity": "error"
    },
    "object-literal-sort-keys": false,
    "max-line-length": false,
    "no-unused-declaration": { "severity": "warning"}
  },
  "rulesDirectory": []
}
