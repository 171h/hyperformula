{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "semicolon": {
      "options": ["never"],
      "severity": "error"
    },
    "indent": {
      "options":["spaces", 2],
      "severity": "error"
    },
    "quotemark": {
     "options": ["single", "avoid-escape"],
      "severity": "error"
    },
    "object-literal-sort-keys": false,
    "max-line-length": false
  },
  "rulesDirectory": []
}